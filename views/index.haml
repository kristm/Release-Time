%html
  %head
    %title Release Times
    %link{rel: 'stylesheet', href: 'https://fonts.googleapis.com/css?family=Lato'}
    :css
      * { margin: 0; padding: 0 }
      body {
        background: #4cf;
        font-family: 'Lato', sans-serif;
        color: azure;
      }
      main {
        position: relative;
        text-align: center;
        margin: 1rem auto;
        width: 80%;
      }
      h1 {
        text-align: center;
        padding: 1em;
        text-transform: uppercase;
      }
      dd {
        display: flex;
        justify-content: space-around;
        flex-flow: row wrap;
      }
      dd > div {
        flex: 1 1 5rem;
        text-align: center;
        padding: 1rem;
        border: 4px solid orangered;
        background: crimson;
        box-shadow: inset 4px 4px 0 4px darkred;
      }
      dl:before {
        position: absolute;
        content: '';
        bottom: -15px;
        height: 15px;
        width: 100%;
        left: 8px;
        transform: skew(45deg);
        background-color: darkred;
      }
      dl:after {
        position: absolute;
        content: '';
        right: -15px;
        height: 100%;
        width: 15px;
        bottom: -8px;
        transform: skewY(45deg);
        background-color: darkred;
      }
      .total { flex-grow: 2; font-weight: bold; font-size: larger }

      @media (max-width: 800px) {
        .start { order: 1; }
        .end { order: 2; }
        .total {
          flex-grow: 2;
          flex-basis: 100%;
          order: 3;
        }
      }
  %body
    %h1 Release Times
    %main
      %dl
        - times.each do | t |
          - if t.keys.size < 3
            - next
          %dd
            - t.each do | key, value |
              %div{class: key}= value
